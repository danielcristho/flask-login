{% extends "layout.jinja2" %}

{% block content %}

    <div class="form-wrapper">
        <img
        src="{{ url_for('static', filename='dist/img/logo.png') }}"
        alt="logo" />
    </div>

    {% for message in get_flashed_messages() %}
    <div class="alert alert-warning">
        <button
        type="button"
        class="close"
        data-dismiss="alert">
        x
        </button>
    </div> 
    {% endfor %}

    <h1>Sign Up</h1>

    <form method="POST" action="/signup">
        {{ form.csrf_token}}

        <fieldset class="name">
            {{ form.name.label }}
            {{ form.name(placeholder='Jhon Smith') }}
            {% if form.name.erros %}
                <ul class="errors">
                    {% for error in form.email.errors%}
                        <li>{{ error }}</li>{% andfor%}
                </ul>
            {% endif %}            
        </fieldset>

        <fieldset class="email">
            {{ form.email.label }}
            {{ form.email(placeholder='youremail@example.com') }}
            {% if form.email.erros %}
                <ul class="errors">
                    {% for error in form.email.errors%}
                        <li>{{ error }}</li>{% andfor%}
                </ul>
            {% endif %}            
        </fieldset>

        <fieldset class="password">
            {{ form.password.label }}
            {{ form.password }}
            {% if form.password.erros %}
                <ul class="errors">
                    {% for error in form.password.errors%}
                        <li>{{ error }}</li>{% andfor%}
                </ul>
            {% endif %}            
        </fieldset>        

        <fieldset class="confirm">
            {{ form.confirm.label }}
            {{ form.confirm }}
            {% if form.confirm.erros %}
                <ul class="errors">
                    {% for error in form.confirm.errors%}
                        <li>{{ error }}</li>{% andfor%}
                </ul>
            {% endif %}            
        </fieldset>

        <fieldset class="website">
            {{ form.website.label}}
            {{ form.website(placeholder='https://github.com') }}
        </fieldset>

        <div class="submit-button">
            {{ form.submit}}
        </div>

    </form>

    <div class="login-signup">
        <div>
         <span>Already have an account?</span>
         <a href="{{ url_for('auth_bp.login') }}">log in.</a>
        </div>
    </div> 

{% endblock %}